{
  "name": "@morpho-org/sdks",
  "version": "0.0.0",
  "description": "Collection of SDKs to interact with Morpho",
  "repository": "git@github.com:morpho-org/sdks.git",
  "author": "Morpho Association <contact@morpho.org>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "biome check",
    "test": "dotenv -- vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@semantic-release/exec": "^6.0.3",
    "@vitest/coverage-v8": "^2.1.3",
    "dotenv-cli": "^7.4.2",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.10",
    "semantic-release": "^24.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.json": "biome check --write --no-errors-on-unmatched",
    "*.ts*": "biome check --write --no-errors-on-unmatched"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "extends": "semantic-release-monorepo",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "pnpm version ${nextRelease.version} --no-git-tag-version",
          "publishCmd": "pnpm publish --access public --tag ${nextRelease.channel} --no-git-checks"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {}
}
