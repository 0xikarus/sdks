    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@wagmi/core": "^2.13.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "viem": "^2.21.32",
